# Server
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Database (Prisma)
# For local SQLite development
DATABASE_URL="file:./prisma/dev.db"
# For PostgreSQL (example)
# DATABASE_URL="postgresql://user:password@localhost:5432/mydb?schema=public"

HOST=http://localhost:3000

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
# Stricter write limiter
WRITE_RATE_LIMIT_WINDOW_MS=60000
WRITE_RATE_LIMIT_MAX=20

# API keys for write operations (comma-separated)
# e.g., API_KEYS=key1,key2
API_KEYS=

# User-Agent denylist (comma-separated substrings, lowercase match)
# e.g., UA_DENYLIST=python-requests,curl,bot
UA_DENYLIST=

# Auth (JWT)
JWT_SECRET=replace-with-32+chars-secret
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_DAYS=7

# Google Sign-In
# Obtain client id from Google Cloud Console (OAuth 2.0 Client IDs)
GOOGLE_CLIENT_ID=